# Run Apache HTTPD using the current folder as the public /
#
# USAGE:
#    httphere
#    httphere <port>

PORT=$1
if [ -z $PORT ]; then
	PORT=8080
fi

PWD=$(pwd)/.
HERE=$(dirname $PWD)/

docker rm -f "apache$PORT" 2&> /dev/null
docker run --name "apache$PORT" -p $PORT:80 -v $HERE:/var/www/html/ -d eboraas/apache

IP=$(ifconfig|grep inet|grep netmask|grep -v 127.0.0|tr -d '\t'|cut -d ' ' -f 2)
echo "=> http://$IP:$PORT"
